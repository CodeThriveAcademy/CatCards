{
  "name": "catcards",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "http-server": "^14.1.1"
  },
  "scripts": {
    "build": "npx webpack",
    "cypress": "npx cypress open",
    "e2e": "npx cypress run",
    "lint": "npx eslint index.js",
    "start": "cross-env BASE_URL=http://localhost:3000 npx webpack && cd dist && npx http-server --cors ."
  },
  "eslintConfig": {
    "parserOptions": {
      "requireConfigFile": false
    },
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": [
      "import"
    ],
    "rules": {
      "import/order": "error",
      "no-console": "error",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "no-var": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ]
    },
    "overrides": [
      {
        "files": "cypress/**/*.{test,spec}.js",
        "env": {
          "jest": true
        },
        "rules": {
          "no-unused-expressions": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "cypress": "^13.11.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "puppeteer": "^22.10.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  }
}
